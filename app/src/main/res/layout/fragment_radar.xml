<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home.menus.RadarFragment">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="lav_viruspurple.json"
                app:lottie_speed="1"
                android:alpha="0.4"
                />
            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/billabong"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:paddingTop="10dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_shieldvec"
                />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/whitetrans"
        app:strokeColor="@color/whitetrans"
        android:outlineSpotShadowColor="@color/whitetrans"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavrefresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_fileName="lav_refreshloc.json"
                android:alpha="0.6"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvinterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardriwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/whitetrans"
            app:strokeColor="@color/whitetrans"
            android:outlineSpotShadowColor="@color/whitetrans"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavvirus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_fileName="lav_virusredspin.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="2.5"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/whitetrans"
            app:strokeColor="@color/whitetrans"
            android:outlineSpotShadowColor="@color/whitetrans"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardriwayat"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavsetting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_fileName="lav_setting.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="2.5"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>